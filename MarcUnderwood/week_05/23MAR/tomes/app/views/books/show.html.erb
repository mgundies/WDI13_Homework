<h1><%= @book.title %></h1>
<%= image_tag(@book.image, :class => 'feature') %>
<ul>
  <% unless @book.writer.nil?  %>
    <li><%= link_to @book.writer, @book.writer %></li>
  <% end %>
  <li><%= @book.publisher %></li>
  <li><%= @book.published %></li>
  <li><%= @book.subject %></li>
  <li><%= @book.pages %></li>
</ul>

<%= link_to 'Edit book', edit_book_path(@book) %>
<%= link_to 'Delete book', @book, :method => :delete %>
