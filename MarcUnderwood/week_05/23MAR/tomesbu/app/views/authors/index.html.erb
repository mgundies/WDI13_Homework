<h1>All Authors</h1>
<% @authors.each do |author| %>
  <%= image_tag(author.image, :class => 'thumb') %>
  <ul>
    <li><%= link_to(author.name, author_path(author.id)) %></li>
    <!-- could replace author_path(author) OR just "author -->
    <li><%= author.nationality %></li>
    <li><%= author.dob.strftime '%A %e %B %Y' unless author.dob.nil? %></li>
    <li><%= author.genre%></li>
  </ul>

<% end %>
